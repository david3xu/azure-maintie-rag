# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Model Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3

# Embedding Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Data Paths (relative to project root)
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
INDICES_DIR=data/indices

# Data Processing Settings
GOLD_DATA_FILENAME=gold_release.json
SILVER_DATA_FILENAME=silver_release.json
GOLD_CONFIDENCE_BASE=0.9
SILVER_CONFIDENCE_BASE=0.7

# Query Analysis Settings
MAX_RELATED_ENTITIES=15
MAX_NEIGHBORS=5
CONCEPT_EXPANSION_LIMIT=10

# Retrieval Settings
VECTOR_SEARCH_TOP_K=10
ENTITY_SEARCH_TOP_K=8
GRAPH_SEARCH_TOP_K=6
EMBEDDING_BATCH_SIZE=32
FAISS_INDEX_TYPE=IndexFlatIP
SIMILARITY_THRESHOLD=0.7

# Fusion Weights
VECTOR_WEIGHT=0.4
ENTITY_WEIGHT=0.3
GRAPH_WEIGHT=0.3

# Generation Settings
LLM_TOP_P=0.9
LLM_FREQUENCY_PENALTY=0.1
LLM_PRESENCE_PENALTY=0.1

# API Validation Settings
QUERY_MIN_LENGTH=3
QUERY_MAX_LENGTH=500
MAX_RESULTS_LIMIT=50

# Performance Settings
MAX_QUERY_TIME=2.0
CACHE_TTL=3600

